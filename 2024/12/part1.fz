dec12 =>

  input := io.stdin.read_lines.filter !="" .map (.codepoints)
  w := input[0].count
  h := input.count
  data := array2 w+2 h+2 x,y->(1<=x<=w && 1<=y<=h ? input[y-1][x-1] : "0")

  part1 =>
    lm : mutate is
    lm ! ()->
      tot := lm.env.new 0
      done := (mutate.array2 bool).new lm (w+2).as_i64 (h+2).as_i64 false
      for xx in 1..w do
        for yy in 1..h do
          kind := data[_,xx,yy]
          a,l := fill xx yy
          fill(x,y) =>
            if kind != data[_,x,y]
              (0, 1)
            else if done[x.as_i64,y.as_i64]
              (0, 0)
            else
              done[x.as_i64,y.as_i64] := true
              a1,l1 := if kind = data[_,x,y] then fill x+1 y   else (0,1)
              a2,l2 := if kind = data[_,x,y] then fill x   y+1 else (0,1)
              a3,l3 := if kind = data[_,x,y] then fill x-1 y   else (0,1)
              a4,l4 := if kind = data[_,x,y] then fill x   y-1 else (0,1)
              (1+a1+a2+a3+a4, l1+l2+l3+l4)
          tot <- a*l + tot
#          say "$xx $yy $kind $a * $l = $tot"
      tot.get
  part2 => "NYI"

  say "$part1,$part2"
