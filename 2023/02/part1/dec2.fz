dec2 is

  bag(r, g, b) is
    ok(d draw) => (r >= d.r &&
                   g >= d.g &&
                   b >= d.b   )

  bag := bag 12 13 14

  draw(s) is
    color(col) => s.split ","
                   .map c->(c.ends_with col ? (c.split " ")[1].parse_i32.val : 0)
                   .fold i32.type.sum
    r := color "red"
    g := color "green"
    b := color "blue"

  game(s) is
    s1 := s.split ":"
    num   := (s1[0].split " ")[1].parse_i32.val
    draws := (s1[1].split ";").map (x->draw x)

  r := io.stdin.with ()->
    for
      score := 0, score + (ok ? g.num : 0)
      l := io.buffered.read_line
    while l != ""
      g := game l
      ok := g.draws âˆ€ bag.ok
    else
      "done: score $score"
  say r
