dec13_part1 is

  LM : mutate is
  input := LM ! ()->io.stdin.reader LM ! ()->io.buffered LM .read_lines

  areas(inp Sequence String) (list (array2 bool)) =>
    n := (inp.take_while !="").count
    if n=0 then nil
    else inp.split_at n ||> (a,b -> area a : areas (b.drop 1))

  area(inp) =>
    c := inp.map s->s.codepoints
    array2 c.count c[0].count i,j->c[i][j]="#"

  mirrors(a) =>
    (0..a.length0-2).flat_map i32 i->
                             for j := 0, j+1
                             while i-j >= 0 && i+j+1 < a.length0
                             until (a.indices1 âˆƒ ix->a[_,i-j,ix]!=a[_,i+j+1,ix]) then []
                             else [i+1]
                    .first 0

  part1 => (areas input).map (a -> 100 * mirrors a + mirrors a.transpose) .sum

  say "part1 $part1"
