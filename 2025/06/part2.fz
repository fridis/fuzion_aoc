dec6 =>

  input := io.stdin.read_string.trim.split "\n" .as_array
  h := input.length

  part1 =>
    a := input.map (.split " " .filter !="" .as_array) .as_array
    a[0].indices.map x->
                  (0..h-2).map y->a[y][x].parse_i64.val
                          .fold1 (if a[h-1][x]="*" then * else +)
                .sum

  part2 =>
    w := input.map (.trim.byte_length) .max.val
    i := input.map s->(s+" ").codepoints.as_array .as_array
    next(c) =>
      if c>=w || (0..h-1 âˆ€ y->i[y][c]=" ") then c+1
                                           else next c+1
    (0 :: next).take_while <=w
               .map c->
                 (c..(next c)-2).map x->
                                  (0..h-2).map y->i[y][x].as_string
                                          .fold1 (+)
                                          .trim.parse_i64.val
                                .fold1 (if i[h-1][c]="*" then * else +)
               .sum

  say "$part1:$part2"
