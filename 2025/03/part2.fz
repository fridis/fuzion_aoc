dec3 =>

  input := io.stdin.read_string.trim.split "\n"
             .map (.codepoints.map (.parse_i64.val))

  joltage(n,v,l) =>
    if n=0 then
      v
    else
      d := l.take (l.count-n+1) .max.val
      joltage n-1 v*10+d (l.drop_while !=d .drop 1)

  part1 =>
    input.map (joltage 2 (i64 0))
         .sum

  part2 =>
    input.map (joltage 12 (i64 0))
         .sum

  say "$part1:$part2"
